generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
enum Role {
  USER
  ADMIN
  OPS
  MANAGER
}

model User {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name String
  bussinessName String

  email String @unique
  hash String
  hashedRt String?

  role Role @default(USER)

  @@map("users")
}